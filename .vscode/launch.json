    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'pitunes-server'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=pitunes-server",
                    "--package=pitunes-server"
                ],
                "filter": {
                    "name": "pitunes-server",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}/pitunes-server"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'pitunes-server'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=pitunes-server",
                    "--package=pitunes-server"
                ],
                "filter": {
                    "name": "pitunes-server",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}/pitunes-server"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'pitunes-tui'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=pitunes-tui",
                    "--package=pitunes-tui"
                ],
                "filter": {
                    "name": "pitunes-tui",
                    "kind": "bin"
                }
            },
            "args": ["https://localhost:8080"],
            "cwd": "${workspaceFolder}/pitunes-tui"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'pitunes-tui'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=pitunes-tui",
                    "--package=pitunes-tui"
                ],
                "filter": {
                    "name": "pitunes-tui",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}/pitunes-tui"
        }
    ]
}